                                              fontSize: 18.sp,
                                              fontWeight: FontWeight.w600,
                                            ),
                                          ),
                                          Text(
                                            "Year: ${car.year} | Fuel: ${car.fuel}",
                                            style: TextStyle(fontSize: 14.sp),
                                          ),
                                          Text(
                                            "â‚¹${car.askingPrice}",
                                          ),
                                        ],
                                      ),
                                    ),
                                  );
                                  // return ListTile(
                                  //   leading: Icon(
                                  //     Icons.directions_car,
                                  //     color: Colors.black,
                                  //     size: 35.w,
                                  //   ),
                                  //   title: Text(
                                  //     car.maker + " " + car.model,
                                  //     style: TextStyle(
                                  //       fontSize: 18.sp,
                                  //       fontWeight: FontWeight.w600,
                                  //     ),
                                  //   ),
                                  //   subtitle: Text(
                                  //     "Year: ${car.year} | Fuel: ${car.fuel}",
                                  //     style: TextStyle(fontSize: 14.sp),
                                  //   ),
                                  //   trailing: Text(
                                  //     "â‚¹${car.askingPrice}",
                                  //     style: TextStyle(
                                  //       fontSize: 16.sp,
                                  //       fontWeight: FontWeight.bold,
                                  //       color: Colors.black,
                                  //     ),
                                  //   ),
                                  // );
                                },
